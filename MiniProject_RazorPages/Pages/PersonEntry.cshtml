@page
@model MiniProject_RazorPages.Pages.PersonEntryModel
@{
    ViewData["Title"] = "Person Entry";
}

<h1>People</h1>

<form action="post">
    <div class="form-group">
        <label asp-for="Person.FirstName"></label>
        <input asp-for="Person.FirstName" type="text" placeholder="Type your first name" />
        </div>
    <div class="form-group">
        <label asp-for="Person.LastName"></label>
        <input asp-for="Person.LastName" type="text" placeholder="Type your last name" />
    </div>
    <div class="form-group">
        <input asp-for="Person.IsActive" type="checkbox"/>
        <label asp-for="Person.IsActive"></label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>