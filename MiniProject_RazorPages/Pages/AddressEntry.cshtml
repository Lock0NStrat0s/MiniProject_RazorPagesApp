@page
@model MiniProject_RazorPages.Pages.AddressEntryModel
@{
    ViewData["Title"] = "Address Entry";
}

<h1>Addresses</h1>

<form action="post">
    <div class="form-group">
        <label asp-for="Address.StreetAddress"></label>
        <input asp-for="Address.StreetAddress" type="text" placeholder="Type street address" />
    </div>
    <div class="form-group">
        <label asp-for="Address.City"></label>
        <input asp-for="Address.City" type="text" placeholder="Type city name" />
    </div>
    <div class="form-group">
        <label asp-for="Address.Province"></label>
        <input asp-for="Address.Province" type="text" placeholder="Type province name" />
    </div>
    <div class="form-group">
        <label asp-for="Address.PostalCode"></label>
        <input asp-for="Address.PostalCode" type="text" placeholder="Type postal code" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>